    <extension
            point="org.eclipse.ui.editors">
        <editor
            class="at.ac.tuwien.big.servicelang.ui.ServiceExecutableExtensionFactory:org.eclipse.xtext.ui.editor.XtextEditor"
            contributorClass="org.eclipse.ui.editors.text.TextEditorActionContributor"
            default="true"
            extensions="service"
            id="at.ac.tuwien.big.servicelang.Service"
            name="Service Editor">
        </editor>
    </extension>
    <extension
        point="org.eclipse.ui.handlers">
        <handler
            class="at.ac.tuwien.big.servicelang.ui.ServiceExecutableExtensionFactory:org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclarationHandler"
            commandId="org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclaration">
            <activeWhen>
                <reference
                    definitionId="at.ac.tuwien.big.servicelang.Service.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
        <handler
            class="at.ac.tuwien.big.servicelang.ui.ServiceExecutableExtensionFactory:org.eclipse.xtext.ui.editor.handler.ValidateActionHandler"
            commandId="at.ac.tuwien.big.servicelang.Service.validate">
         <activeWhen>
            <reference
                    definitionId="at.ac.tuwien.big.servicelang.Service.Editor.opened">
            </reference>
         </activeWhen>
      	</handler>
      	<!-- copy qualified name -->
        <handler
            class="at.ac.tuwien.big.servicelang.ui.ServiceExecutableExtensionFactory:org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedNameHandler"
            commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedName">
            <activeWhen>
				<reference definitionId="at.ac.tuwien.big.servicelang.Service.Editor.opened" />
            </activeWhen>
        </handler>
        <handler
            class="at.ac.tuwien.big.servicelang.ui.ServiceExecutableExtensionFactory:org.eclipse.xtext.ui.editor.copyqualifiedname.OutlineCopyQualifiedNameHandler"
            commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.OutlineCopyQualifiedName">
            <activeWhen>
            	<and>
            		<reference definitionId="at.ac.tuwien.big.servicelang.Service.XtextEditor.opened" />
	                <iterate>
						<adapt type="org.eclipse.xtext.ui.editor.outline.IOutlineNode" />
					</iterate>
				</and>
            </activeWhen>
        </handler>
    </extension>
    <extension point="org.eclipse.core.expressions.definitions">
        <definition id="at.ac.tuwien.big.servicelang.Service.Editor.opened">
            <and>
                <reference definitionId="isActiveEditorAnInstanceOfXtextEditor"/>
                <with variable="activeEditor">
                    <test property="org.eclipse.xtext.ui.editor.XtextEditor.languageName" 
                        value="at.ac.tuwien.big.servicelang.Service" 
                        forcePluginActivation="true"/>
                </with>        
            </and>
        </definition>
        <definition id="at.ac.tuwien.big.servicelang.Service.XtextEditor.opened">
            <and>
                <reference definitionId="isXtextEditorActive"/>
                <with variable="activeEditor">
                    <test property="org.eclipse.xtext.ui.editor.XtextEditor.languageName" 
                        value="at.ac.tuwien.big.servicelang.Service" 
                        forcePluginActivation="true"/>
                </with>        
            </and>
        </definition>
    </extension>
    <extension
            point="org.eclipse.ui.preferencePages">
        <page
            class="at.ac.tuwien.big.servicelang.ui.ServiceExecutableExtensionFactory:org.eclipse.xtext.ui.editor.preferences.LanguageRootPreferencePage"
            id="at.ac.tuwien.big.servicelang.Service"
            name="Service">
            <keywordReference id="at.ac.tuwien.big.servicelang.ui.keyword_Service"/>
        </page>
        <page
            category="at.ac.tuwien.big.servicelang.Service"
            class="at.ac.tuwien.big.servicelang.ui.ServiceExecutableExtensionFactory:org.eclipse.xtext.ui.editor.syntaxcoloring.SyntaxColoringPreferencePage"
            id="at.ac.tuwien.big.servicelang.Service.coloring"
            name="Syntax Coloring">
            <keywordReference id="at.ac.tuwien.big.servicelang.ui.keyword_Service"/>
        </page>
        <page
            category="at.ac.tuwien.big.servicelang.Service"
            class="at.ac.tuwien.big.servicelang.ui.ServiceExecutableExtensionFactory:org.eclipse.xtext.ui.editor.templates.XtextTemplatePreferencePage"
            id="at.ac.tuwien.big.servicelang.Service.templates"
            name="Templates">
            <keywordReference id="at.ac.tuwien.big.servicelang.ui.keyword_Service"/>
        </page>
    </extension>
    <extension
            point="org.eclipse.ui.propertyPages">
        <page
            class="at.ac.tuwien.big.servicelang.ui.ServiceExecutableExtensionFactory:org.eclipse.xtext.ui.editor.preferences.LanguageRootPreferencePage"
            id="at.ac.tuwien.big.servicelang.Service"
            name="Service">
            <keywordReference id="at.ac.tuwien.big.servicelang.ui.keyword_Service"/>
            <enabledWhen>
	            <adapt type="org.eclipse.core.resources.IProject"/>
			</enabledWhen>
	        <filter name="projectNature" value="org.eclipse.xtext.ui.shared.xtextNature"/>
        </page>
    </extension>
    <extension
        point="org.eclipse.ui.keywords">
        <keyword
            id="at.ac.tuwien.big.servicelang.ui.keyword_Service"
            label="Service"/>
    </extension>
    <extension
         point="org.eclipse.ui.commands">
      <command
            description="Trigger expensive validation"
            id="at.ac.tuwien.big.servicelang.Service.validate"
            name="Validate">
      </command>
      <!-- copy qualified name -->
      <command
            id="org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedName"
            categoryId="org.eclipse.ui.category.edit"
            description="Copy the qualified name for the selected element"
            name="Copy Qualified Name">
      </command>
      <command
            id="org.eclipse.xtext.ui.editor.copyqualifiedname.OutlineCopyQualifiedName"
            categoryId="org.eclipse.ui.category.edit"
            description="Copy the qualified name for the selected element"
            name="Copy Qualified Name">
      </command>
    </extension>
    <extension point="org.eclipse.ui.menus">
        <menuContribution
            locationURI="popup:#TextEditorContext?after=group.edit">
             <command
                 commandId="at.ac.tuwien.big.servicelang.Service.validate"
                 style="push"
                 tooltip="Trigger expensive validation">
            <visibleWhen checkEnabled="false">
                <reference
                    definitionId="at.ac.tuwien.big.servicelang.Service.Editor.opened">
                </reference>
            </visibleWhen>
         </command>  
         </menuContribution>
         <!-- copy qualified name -->
         <menuContribution locationURI="popup:#TextEditorContext?after=copy">
         	<command commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedName" 
         		style="push" tooltip="Copy Qualified Name">
            	<visibleWhen checkEnabled="false">
                	<reference definitionId="at.ac.tuwien.big.servicelang.Service.Editor.opened" />
            	</visibleWhen>
         	</command>  
         </menuContribution>
         <menuContribution locationURI="menu:edit?after=copy">
         	<command commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedName"
            	style="push" tooltip="Copy Qualified Name">
            	<visibleWhen checkEnabled="false">
                	<reference definitionId="at.ac.tuwien.big.servicelang.Service.Editor.opened" />
            	</visibleWhen>
         	</command>  
         </menuContribution>
         <menuContribution locationURI="popup:org.eclipse.xtext.ui.outline?after=additions">
			<command commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.OutlineCopyQualifiedName" 
				style="push" tooltip="Copy Qualified Name">
         		<visibleWhen checkEnabled="false">
	            	<and>
	            		<reference definitionId="at.ac.tuwien.big.servicelang.Service.XtextEditor.opened" />
						<iterate>
							<adapt type="org.eclipse.xtext.ui.editor.outline.IOutlineNode" />
						</iterate>
					</and>
				</visibleWhen>
			</command>
         </menuContribution>
    </extension>
